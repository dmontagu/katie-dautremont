---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Katie d'Autremont, LCPC - Licensed Clinical Professional Counselor, Writer, and Guide" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet" />
    <title>{title} | Be Balanced</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 py-6 px-8 bg-white/80 backdrop-blur-md border-b border-cream-dark/50">
      <nav class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/" class="font-serif text-xl text-charcoal hover:text-sage transition-colors">
          Be Balanced
        </a>
        <ul class="hidden md:flex items-center gap-8 text-sm">
          <li><a href="/about" class="text-charcoal-light hover:text-sage transition-colors">About</a></li>
          <li><a href="/therapy" class="text-charcoal-light hover:text-sage transition-colors">Therapy</a></li>
          <li><a href="/writing" class="text-charcoal-light hover:text-sage transition-colors">Writing</a></li>
          <li><a href="/courses" class="text-charcoal-light hover:text-sage transition-colors">Courses</a></li>
          <li><a href="/ask" class="text-charcoal-light hover:text-sage transition-colors">Ask</a></li>
          <li><a href="/contact" class="bg-sage text-cream px-6 py-2 rounded-md hover:bg-sage-dark transition-colors">Contact</a></li>
        </ul>
        <button class="md:hidden text-charcoal" aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-cream-dark py-12 px-8 mt-auto">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-3 gap-12 mb-12">
          <div>
            <h3 class="font-serif text-lg mb-4">Be Balanced</h3>
            <p class="text-sm text-charcoal-light">
              Katie d'Autremont, LCPC<br />
              Licensed Clinical Professional Counselor
            </p>
          </div>
          <div>
            <h4 class="font-medium mb-4 text-sm">Navigate</h4>
            <ul class="text-sm text-charcoal-light space-y-2">
              <li><a href="/about" class="hover:text-sage transition-colors">About</a></li>
              <li><a href="/therapy" class="hover:text-sage transition-colors">Therapy</a></li>
              <li><a href="/writing" class="hover:text-sage transition-colors">Writing</a></li>
              <li><a href="/courses" class="hover:text-sage transition-colors">Courses</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-medium mb-4 text-sm">Connect</h4>
            <ul class="text-sm text-charcoal-light space-y-2">
              <li><a href="https://substack.com/@katiebetweensessions" class="hover:text-sage transition-colors" target="_blank" rel="noopener">Substack</a></li>
              <li><a href="/contact" class="hover:text-sage transition-colors">Contact</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-warm-gray/30 pt-6 text-xs text-warm-gray">
          <p class="mb-2">
            <strong>Crisis Resources:</strong> If you are in crisis, please call 988 (Suicide & Crisis Lifeline) or go to your nearest emergency room.
          </p>
          <p>
            &copy; {new Date().getFullYear()} Be Balanced Counseling. All rights reserved. |
            <a href="/privacy" class="hover:text-sage">Privacy</a> |
            <a href="/terms" class="hover:text-sage">Terms</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
